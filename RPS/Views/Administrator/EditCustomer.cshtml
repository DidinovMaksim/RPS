@using RPS.ValidationModels
@using RPS.Controllers
@using RPS.Models
@model UserValidation

<script src="~/Scripts/RoleScripts/AdministratorCustomerFunctionality.js"></script>

@{
    ViewBag.Title = "EditCustomer";
}

<h2>EditCustomer</h2>

<div id="edit-customer-window-form">
    @using (@Ajax.BeginForm("EditUser", "Administrator", new AjaxOptions()
    {
        OnSuccess = "EditStatus",
        UpdateTargetId = "edit-customer-window-form",
    }))
    {
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Login, new { id = "login", @class = "form-control", @placeholder = "Login:", required = "required", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    <label for="fname">User first name:</label>
                    @Html.TextBoxFor(m => m.UserFN, new { id = "fname", @class = "form-control", @placeholder = "First name:", required = "required" })
                </div>
                <div class="form-group">
                    <label for="lname">User last name:</label>
                    @Html.TextBoxFor(m => m.UserLN, new { id = "lname", @class = "form-control", @placeholder = "Last name:", required = "required" })
                </div>
                <div class="form-group">
                    <label for="datepicker">Birthday:</label>
                    @Html.TextBoxFor(m => m.Birthday, new { id = "datepicker", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="phone">Mobile phone:</label>
                    @Html.TextBoxFor(m => m.MPhone, new { id = "phone", @class = "form-control", @placeholder = "Phone number:" })
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    @Html.TextBoxFor(m => m.Email, new { id = "email", @class = "form-control", @placeholder = "Email:", required = "required" })
                </div>
                    @Html.HiddenFor(m => m.id, new { id = "id" })
                
                <div class="checkbox">
                    <label for="IsActive">IsActive:</label>
                    @Html.CheckBoxFor(m => m.IsActive, new { id = "IsActive" })
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" id="edit-button" class="btn btn-primary">Edit customer</button>
            </div>
        </form>
    }
</div>
